#:kivy 2.1.0
<HomeScreen>:
	entries_grid: entries_grid

	canvas.before:
		Color:
			rgba: 237/255, 231/255, 217/255, 1
		Rectangle:
			size: self.size
			pos: self.pos

	BoxLayout:
		orientation: "vertical"

		HeaderBox:
			Label:
				text: root.vault_header
				font_size: "24sp"
				size_hint_x: 0.7
				bold: True

		AnchorLayout:
			anchor_x: "center"
			anchor_y: "center"

			BoxLayout:
				orientation: "vertical"
				padding: dp(16)
				spacing: dp(12)
				size_hint: None, None
				width: min(dp(480), root.width * 0.95)
				height: min(dp(560), root.height * 0.95)

				Label:
					text: root.status
					size_hint_y: None
					height: dp(24)
					color: 75/255, 66/255, 55/255, 1

				BoxLayout:
					orientation: "vertical"
					size_hint_y: 1

					ScrollView:
						do_scroll_x: False
						do_scroll_y: True
						GridLayout:
							id: entries_grid
							cols: 1
							size_hint_y: None
							height: self.minimum_height
							spacing: dp(6)
							padding: 0, dp(4)
					
				BoxLayout:
					size_hint_y: None
					height: dp(44)
					spacing: dp(8)
					CustomButton:
						text: "Add"
						on_release: root.goto_add()
					CustomButton:
						text: "Edit"
						on_release: root.goto_edit()
					CustomButton:
						text: "Delete"
						on_release: root.goto_delete()
					CustomButton:
						text: "Profile"
						on_release: root.goto_profile()

				BoxLayout:
					size_hint_y: None
					height: dp(44)
					spacing: dp(8)
					CustomButton:
						text: "Export Backup"
						on_release: root.goto_backup_export()
					CustomButton:
						text: "Import Backup"
						on_release: root.goto_backup_import()