#:kivy 2.1.0
# components.kv

<HeaderBox@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(56)
    padding: dp(8)
    spacing: dp(8)
    canvas.before:
        Color:
            rgba: 75/255, 66/255, 55/255, 1
        Rectangle:
            size: self.size
            pos: self.pos

<CustomToggleButton@ToggleButton>:
    font_size: 20
    background_color: 0,0,0,0
    background_normal: ""
    background_down: ""
    canvas.before:
        Color:
            rgba: 213/250, 160/250, 33/250, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
    canvas.after:
        Color:
            rgba: (183/250, 130/250, 13/250, 1) if self.state == 'down' else (0,0,0,0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<CustomButton@Button>:
    font_size: 20
    background_color: 0,0,0,0
    background_normal: ""
    background_down: ""
    canvas.before:
        Color:
            rgba: 213/250, 160/250, 33/250, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]
    canvas.after:
        Color:
            rgba: (183/250, 130/250, 13/250, 1) if self.state == 'down' else (0,0,0,0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]


<CustomToggleButton@ToggleButton>:
    font_size: 20
    background_color: 0,0,0,0
    background_normal: ""
    background_down: ""
    canvas.before:
        Color:
            rgba: 213/250, 160/250, 33/250, 1 if self.state == 'normal' else 183/250, 130/250, 13/250, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]


<CustomTextInput@TextInput>:
    background_color: 0, 0, 0, 0  # Make default background transparent
    canvas.before:
        Color:
            rgba: 237/255, 231/255, 217/255, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [30,]  # Rounded corners
        Color:
            rgba: 213/250, 160/250, 33/250, 1  # Darker gray border
        Line:
            width: 1.5
            rounded_rectangle: self.x, self.y, self.width, self.height, 10

<CustomSpinnerOption@SpinnerOption>:
    color: 1, 1, 1, 1
    background_color: 75/255, 66/255, 55/255, 1
    background_normal: ""
    size_hint_y: None
    height: dp(40)
    padding: dp(12), dp(12)
    canvas.after:
        Color:
            rgba: 0, 0, 0, 0.5
        Rectangle:
            pos: self.x, self.y
            size: self.width, 1


<CustomSpinner@Spinner>:
    option_cls: "CustomSpinnerOption"
    color: 1, 1, 1, 1
    background_color: 75/255, 66/255, 55/255, 1
    background_normal: ""

<CustomPopup@Popup>:
    size_hint: None, None
    size: dp(520), dp(420)
    auto_dismiss: False
    background: ""
    canvas.before:
        Color:
            rgba: 237/255, 231/255, 217/255, 1
        RoundedRectangle:
            pos: self.x, self.y
            size: self.width, self.height
            radius: [12]
        Color:
            rgba: 75/255, 66/255, 55/255, 1
        Line:
            width: 1.2
            rounded_rectangle: self.x, self.y, self.width, self.height, 12